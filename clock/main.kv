
<ClockApp>:
    orientation:'vertical'
    ScreenManager:
        id:screen_manager
        Screen:
            name:'clock_screen'
            BoxLayout:
                FloatLayout:
                    id:clock_screen_id
                    Label:
                        text:root.current_time
                        font_size:dp(70)
                    
                    ImageButton:
                        size_hint:None,None
                        size:dp(50),dp(50)
                        source:'settings_icon.png'
                        on_press:
                            root.ids.screen_manager.transition.direction='left'
                            root.ids.screen_manager.current='settings_menu'
                           
                           
        Screen:
            name:'settings_menu'
            BoxLayout:
                orientation:'vertical'
                
                Label:
                    text:'Seconds'
                Switch:
                    on_active:root.update_screen(self,self.active,'seconds')
                        
                Label:
                    text:'Day + Month'
                Switch:
                    on_active:root.update_screen(self,self.active,'day_+_month')
                
                Label:
                    text:'Day of Week'
                Switch:
                    on_active:root.update_screen(self,self.active,'day_of_week')
                    
                Label:
                    text:'Year'
                Switch:
                    on_active:root.update_screen(self,self.active,'year')    
                  
                Button:
                    text:'Back'
                    on_press:
                        root.ids.screen_manager.transition.direction='right'
                        root.ids.screen_manager.current = 'clock_screen'
                        
        Screen:
            name:'stopwatch_screen'      
            BoxLayout:
                FloatLayout:
                    id:stopwatch_screen_id
                    Label:
                        text:str(root.stopwatch_time)
                        font_size:dp(70)
                        
                    Button:
                        id :start_button
                        text: 'Start'
                        size_hint:None,None
                        size:dp(100),dp(50)
                        pos:(root.width /2)-(self.width/2),(root.height/2)-dp(130)
                        on_press:root.start_stopwatch(self)
                       
                    Button:
                        id:stop_button
                        text:'Stop'
                        size_hint:None,None
                        size:dp(100),dp(50)
                        pos:(root.width/2)-(self.width/2),(root.height/2)-dp(200)
                        on_press:root.stop_stopwatch(self)
                        disabled:True
                       
                       
                    Button:
                        id:reset_button
                        text:'Reset'
                        size_hint:None,None
                        size:dp(100),dp(50)
                        pos:(root.width/2)-(self.width/2),(root.height/2)-dp(279)
                        on_press:root.reset_stopwatch(self)
   
    BoxLayout:
        size_hint_y:None
        size:root.width,dp(40)
        Button:
            id:clock_button
            text:'Colck'
            on_press:
                root.ids.screen_manager.transition.direction='up'
                root.ids.screen_manager.current='clock_screen'
                
                
        Button:
            id:stopwatch_button
            text:'Stopwatch'  
            on_press:
                root.ids.screen_manager.transition.direction ='down'
                root.ids.screen_manager.current='stopwatch_screen'
                                
                       
                       
                       
                       
                       
            
                  
                    
                    
                    
                    